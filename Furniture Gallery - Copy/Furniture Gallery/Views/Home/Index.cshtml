@model Tuple<IEnumerable<Furniture_Gallery.Models.Homepage> ,IEnumerable<Furniture_Gallery.Models.AboutU>
,IEnumerable<Furniture_Gallery.Models.ContactU>,IEnumerable<Furniture_Gallery.Models.Furniturecategory>,IEnumerable<Furniture_Gallery.Models.Testimonial>>




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Built Better</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">



     <style>
        .furniture_text{
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .there_text{
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -50%);
           

        }


        .send_bt {
            width: 100%;
            float: left;
            margin-top: 50px;
        }

            .send_bt div input {
                width: 30%;
                float: left;
                font-size: 20px;
                color: #989696;
                text-align: center;
                border: 2px solid #ffffff;
                padding: 10px 0px;
                font-weight: bold;
            }

                .send_bt input:hover {
                    color: #989696;
                    background-color: #ffffff;
                }

        .copyright_section1 {
            width: 100%;
            float: left;
            background-color: #fdbe28;
            height: auto;
        }

        .copyright_text1 {
            width: 100%;
            float: left;
            color: #000;
            text-align: center;
            font-size: 16px;
            margin-left: 0px;
        }

            .copyright_text1 a {
                color: #000;
            }

                .copyright_text a:hover {
                    color: #fff;
                }



       
    </style>

    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/AssetsHome/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="~/AssetsHome/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/AssetsHome/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/AssetsHome/images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/AssetsHome/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="~/AssetsHome/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/AssetsHome/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link href="~/css/stylesheet.css" rel="stylesheet" />


</head>
<body>
    <!-- header section start -->
    <div class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="logo">
                    @foreach(var item in Model.Item1)
                    {
                       <img src=@Url.Content("~/Images/" + item.HomepageLogo)
                         asp-append-version="true" style="border-radius:20%;" width="130" height="100" />
                    }
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#testimonial">Testimonial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>

                        </li>

                    </ul>
                    
                </div>
                    
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="nav navbar-nav navbar-right">
                          
                            <li class="nav-item ">
                                <a class="nav-link" href="/RegisterLogin/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/RegisterLogin/Login">Login</a>
                            </li>
                        </ul>
                    </div>
                  
            </nav>
        </div>
    </div>


<!-- banner section start -->
 <div class="layout_padding">
    <div id="costum_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model.Item1)
            {
                <div class="carousel-item active">
                <img  class="d-block w-100" src=@Url.Content("~/Images/" + item.HomepageImage)
                     asp-append-version="true" />
                    <h1 class="furniture_text">@item.HomepageTitle</h1>
                    <p class="there_text font-weight-bold">@item.HomepageDescription</p>
                </div>
            }
            
            
          </div>
     </div>
    </div>

    <br/>
    <br/>
    <br/>

<!--banner section end-->
    <!-- about section start -->


    <div class="about_section layout_padding">
        <div class="container">
            <div class="row" id="about">
               
                    @foreach(var item in Model.Item2)
                    {
                        <div class="col-md-6">
                           <h1 class="about_text">@item.Title</h1>
                           <p style="font-size:23px;"class="lorem_text">@item.Description</p>
                        </div>
                     } 
                   @* <div class="read_bt1"><a href="#">Read More</a></div>*@
               
                <div class="col-md-6">
                    @foreach(var item in Model.Item2)
                    {
                         <div class="image_1">
                        <img  class="d-block w-100" src=@Url.Content("~/Images/" + item.ImagePath)
                              asp-append-version="true" />
                       
                         </div>

                        
                    }

                    </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>

    <!-- projects section start -->

   
    <div class="projects_section layout_padding">
        <div class="container">
            <h1 class="our_text">Our Category</h1>
           @* <p class="ipsum_text">Lorem ipsum dolor sit amet, consectetur adipiscing</p>*@

           
            <div id="main_slider" class="carousel slide" data-ride="carousel">
               
                <div class="carousel-inner">
                  
                    <div class="carousel-item active" id="shop">
                        
                        <div class="projects_section2">
                             
                            <div class="container">
                               
                                <div class="row">
                                    @foreach (var item in Model.Item4)
                                    {
                                    <div class="col-sm-4">


                                            <div class="container_main1 ">
                                                <img class="image" src=@Url.Content("~/Images/" + item.ImagePath)
                                                 asp-append-version="true" />
                                          
                                            <h1 class="modern_text">@item.Categoryname</h1>
                                            <div class="middle">
                                                <div class="text">
                                                        <a href="/RegisterLogin/Login">VIEW MORE</a>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                  }
                                   
                                  
                            
                   
                @*
                <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>*@
                                </div>

                            </div>

                        </div>

                    </div>


                </div>
            
        </div>
    </div>
    </div>

    
    <!-- projects section end -->









     <br/>
     <br/>
     <br />

    <!-- about section end -->
    <!-- contact section start -->
    <div class="contact_section layout_padding">
        <div class="container">
            <div class="row">
               
                <div class="col-md-6">
                    <h1 class="contact_text" id="contact">CONTACT US</h1>
                   
                    <div class="mail_sectin">
                     <form asp-action="Create" >
                            <input type="text" class="email-bt" placeholder="Name" name="Name">
                            <input type="text" class="email-bt" placeholder="Email" name="Email">

                            <textarea class="massage-bt" placeholder="Massage" rows="5" id="comment" name="Massage"></textarea>
                           <div class="send_bt">
                              <div>
                                    <input class="send_bt" type="submit" value="Save" />
                              </div>
                                

                           </div>
                             
                     </form>
                       
                    </div>
                       
                        
                </div>
             
                <div class="col-md-6">
                    <div class="image_9"><img src="~/AssetsHome/images/img-9.png"></div>
                </div>

             
            </div>
        </div>
    </div>
    <!-- contact section end -->
    <!-- client section start -->







    <!-- client section end -->
    <!-- TESTIMONIALS -->
    <section class="testimonials">
        <div class="container">

            <div class="row" id="testimonial">
                <div class="col-sm-12">
                    <div id="customers-testimonials" class="owl-carousel">

                        <!--TESTIMONIAL 1 -->

                          @foreach (var item in Model.Item5)
                          {
                            @if (item.TestimonialStatus == "Approved")
                            {
                        <div class="item">
                            <div class="shadow-effect">
      
                                <img  class="img-circle" src=@Url.Content("~/Images/" + @item.Useraccount.ImagePath)
                                                 asp-append-version="true" />
                                        <p>@item.Message</p>
                            </div>
                                    <div class="testimonial-name">@(item.Useraccount.Firstname + "   " + item.Useraccount.Lastname)</div>
                        </div>
                        }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END OF TESTIMONIALS -->



















    <div class="copyright_section1 ">
        <div class="container">
            @foreach (var item in Model.Item1)
            {
            <div class="social_icon">
                <ul>
                   
                    <li><a href="#"><img src="~/AssetsHome/images/icons9.png"></a>@item.Email</li>
                        <li><a href="#"><img src="~/AssetsHome/images/phone2.png " style ="width:50px ; height:50px"></a>@item.Phone</li>
                  
                </ul>
            </div>
           
            <p class="copyright_text1">2023 All Rights Reserved. Design by <a href="#">@item.HomepageTitle</a></p>
            }
        </div>
    </div>
    <!-- Javascript files-->
    <script src="~/AssetsHome/js/jquery.min.js"></script>
    <script src="~/AssetsHome/js/popper.min.js"></script>
    <script src="~/AssetsHome/js/bootstrap.bundle.min.js"></script>
    <script src="~/AssetsHome/js/jquery-3.0.0.min.js"></script>
    <script src="~/AssetsHome/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/AssetsHome/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/AssetsHome/js/custom.js"></script>
    <!-- javascript -->
    <script src="~/AssetsHome/js/owl.carousel.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
    
    <script>
        jQuery(document).ready(function ($) {
            "use strict";
            //  TESTIMONIALS CAROUSEL HOOK
            $('#customers-testimonials').owlCarousel({
                loop: true,
                center: true,
                items: 3,
                margin: 0,
                autoplay: true,
                dots: true,
                autoplayTimeout: 8500,
                smartSpeed: 450,
                responsive: {
                    0: {
                        items: 1
                    },
                    768: {
                        items: 2
                    },
                    1170: {
                        items: 3
                    }
                }
            });
        });
    </script>

   
</body>
</html>




































