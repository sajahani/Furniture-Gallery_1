    <link rel="stylesheet" href="~/AssetsHome/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/AssetsHome/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">


    <style>

        
        .copyright_section1 {
            width: 100%;
            float: left;
            background-color: #fdbe28;
            height: auto;
           
       
        }

        .copyright_text1 {
            width: 100%;
            float: left;
            color: #000;
            text-align: center;
            font-size: 16px;
            margin-left: 0px;
        }

            .copyright_text1 a {
                color: #000;
            }

        .copyright_text a:hover {
            color: #fff;
        }

        .flex-wrapper {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            justify-content: space-between;
        }
       
    </style>


</head>
<body>



    <!-- header section start -->

    <div class="flex-wrapper">


    <div class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="logo">

                    <img src="~/images/090b4b81-39b1-435f-8625-07998e77cf45_logo (2).png" width="100" height="100" />
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Testimonials/Addreview">Testimonial</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/GetProduct">Shop</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user"></i>@ViewBag.user
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Useraccounts" asp-action="UserProfile"><i class="fa fa-user"></i> MyProfile</a>
                               
                                <a class="dropdown-item" asp-controller="RegisterLogin" asp-action="Logout"><i class="fa fa-sign-out"></i> Logout</a>
                            </div>
                        </li>

                    </ul>

                </div>

               
                        <form class="form-inline my-2 my-lg-0" asp-controller="Home" asp-action="Filter" style="padding-right: 25px;">
                            <input name="searchString" type="text" class="form-control bg-white" placeholder="Search for a products..." aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
                        </form>
                  

            </nav>
        </div>
    </div>























