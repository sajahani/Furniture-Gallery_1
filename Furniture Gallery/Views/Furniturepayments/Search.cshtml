@model IEnumerable<Furniture_Gallery.Models.Productorder>
@{
    Layout = "_LayoutDashboard";
}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.3.2/css/buttons.dataTables.min.css" />
    

</head>
<body>
<h2>Sales</h2>


<div class="panel-footer row">
    <form asp-action="Search" method="post">
    <div class="col-xs-6 text-left">
        <div class="previous">
           
             
                    
                        <div class="form-group">
                           
                   
                    <div class="col-sm-5">
                        <label for="nom" class="col-sm-7 control-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control" id="nom" />
                    </div>
                    <div class="col-sm-5">
                        <label for="nom" class="col-sm-5 control-label">End  Date</label>
                        <input type="date" name="endDate" class="form-control" id="nom" />
                    </div>
                        </div>
                       
                  

               
           
        </div>
    </div>
    <div class="col-xs-6 text-right ">

        <button class="btn btn-warning btn-block" style=" margin-top:5%;">Search</button>      
        
    </div>
    </form>
</div>

  

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Sales</h4>

                    </div>
                    <div class="content table-responsive table-full-width">
     <table class="table display" id="example">
    <thead>
        <tr>
          
            <th>
              Product Name 
            </th>
            <th>
                Order Date
            </th>
            <th>
                Total Amount
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                   @item.Product.Productname
                </td>
                <td>
                    @item.Order.OrderDate
                </td>
                <td>
                    @item.TotalAmount
                </td>
            </tr>
        }
    </tbody>
</table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <script src="~/assetsdash/js/jquery-1.10.2.js"></script>
<script src="https://code.jquery.com/jquery3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

    <script src="https://gist.github.com/usmcamp0811/12861eb9a2ea84be488fb50e2f398597.js"></script>


    <script>
       
            $(document).ready(function () {
                $('#example').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        'copyHtml5',
                        'excelHtml5',
                        'csvHtml5',
                        'pdfHtml5'
                    ]
                });
            });

       
    </script>
</body>
</html>
