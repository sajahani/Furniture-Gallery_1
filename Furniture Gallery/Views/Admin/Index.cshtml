@model  Tuple<IEnumerable<Furniture_Gallery.Models.OrderChartData>,IEnumerable<Furniture_Gallery.Models.Useraccount>,IEnumerable<Furniture_Gallery.Models.Homepage>>
  

@{
    Layout = "_LayoutDashboard";
}



<link href="~/assetsdash/css/paper-dashboard.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-warning text-center">
                                    <i class="ti-user"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Number of Customer</p>
                                    @ViewBag.usernum
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-reload"></i> Updated now
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-success text-center">
                                    <i class="ti-server"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Number of Category</p>
                                     @ViewBag.catnum
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-calendar"></i>  Updated now
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-danger text-center">
                                    <i class="ti-list"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Number Of Product</p>
                                    @ViewBag.productnum
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-reload"></i> Updated now
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-info text-center">
                                    <i class="ti-shopping-cart"></i> 
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Number of All Order</p>
                                    @ViewBag.ordernum
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-reload"></i> Updated now
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>








        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title"> Recent Users</h4>
                       
                    </div>
                    <div class="content">
                        
                        

                    <div class="content table-responsive table-full-width">
                        <table class="table table-striped">
                            <tbody>
                                @foreach (var  item in Model.Item2)
                                {
                                    <tr>
                                         <th>
                                            <img src=@Url.Content("~/Images/" + item.ImagePath)
                                             asp-append-version="true" style="border-radius:30%;" width="100" height="100" />
                                        </th>
                                        <th>
                                            @Html.DisplayFor(modelItem => item.Firstname)
                                        </th>
                                        <th>
                                            @Html.DisplayFor(modelItem => item.Lastname)
                                        </th>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
               




        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card card-circle-chart" data-background-color="blue">
                    <div class="card-header text-center">
                        <h5 class="card-title">Dashboard</h5>
                        <p class="description">Monthly sales target</p>
                    </div>
                    <div class="card-content">
                        <div id="chartDashboardDoc" class="chart-circle" data-percent="70">


                            <canvas height="100" width="100" id="chart">
                                
                            </canvas>

       
                          
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="card card-circle-chart" data-background-color="green">
                    <div class="card-header text-center">
                        <h5 class="card-title">Logo</h5>
                        <p class="description"></p>
                    </div>
                    <div class="card-content">
                        <div id="chartOrdersDoc" class="chart-circle" data-percent="34">

                            <canvas height="160" width="160"></canvas>
                            @foreach(var item in Model.Item3)
                            {
                             <img src=@Url.Content("~/Images/" + item.HomepageLogo )
                 asp-append-version="true" />
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
 <script src="~/AssetsDash/js/jquery-1.10.2.js" type="text/javascript"></script>
 <script>
      var data = [];
    var labels = [];

    @foreach (var item in Model.Item1)
    {
        <text>data.push(@item.Count);</text>
        <text>labels.push('@item.Category');</text>
    }

    var ctx = document.getElementById('chart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 206, 86, 0.2)', 'rgba(75, 192, 192, 0.2)', 'rgba(153, 102, 255, 0.2)'],
                borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)'],
                borderWidth: 1
            }]
        },
        options: {
            legend: {
                position: 'right',
            },
        }
    });


 </script>







   









